{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "$nuxt": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "no-console": 1,
    "no-empty": 0,
    "no-useless-catch": 0,
    "vue/component-name-in-template-casing": ["error", "PascalCase"],
    "no-debugger": process.env.NODE_ENV === "production" ? "error" : "off"
  }
}
